<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h1>Account Detail</h1>
  </div>
  <div class="card-body">
    <p>
      <strong>Customer:</strong>
      <%= @account.customer.full_name %>
    </p>

    <p>
      <strong>Number:</strong>
      <%= @account.number %>
    </p>

    <p>
      <strong>Balance:</strong>
      <%= @account.balance %>
    </p>

    <div>
      <span><%= link_to "Edit", edit_account_path(@account), class: 'btn btn-primary btn-sm' %></span>
      <span><%= link_to "Back", accounts_path, class: 'btn btn-outline-primary btn-sm' %></span>
    </div>
  </div>
</div>
