<hr>
<table class="table">
  <thead>
    <tr class="text-center">
      <th scope="col">No</th>
      <th scope="col">Amount</th>
      <th scope="col">Sender</th>
      <th scope="col">Receiver</th>
      <th scope="col" colspan="6">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @transfers.each_with_index do |transfer, index| %>
    <tr class="text-center">
      <th scope="row"><%= index + 1 %></th>
      <td><%= format_rupiah(transfer.amount) %></td>
      <td><%= "#{transfer.sender.number} - #{transfer.sender.customer.full_name}" %></td>
      <td><%= "#{transfer.receiver.number} - #{transfer.receiver.customer.full_name}" %></td>
      <td colspan="6"><%= link_to "Show", transfer, class: 'btn btn-secondary btn-sm' %><td>
    </tr>
  <% end %>
  </tbody>
</table>
