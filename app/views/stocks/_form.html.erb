<%= form_with(model: stock) do |form| %>
  <% if stock.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
        <% stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-4 form-group mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="col-4 form-group mb-3">
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code, class: 'form-control' %>
  </div>

  <div class="col-4 form-group mb-3">
    <%= form.label :stock_type, style: "display: block" %>
    <%= form.select :stock_type, Stock.stock_type.options, {}, { class: "form form-group form-select" } %>
  </div>

  <div class="col-4 form-group mb-3">
    <%= form.label :balance, style: "display: block" %>
    <%= form.text_field :balance, class: 'form-control' %>
  </div>

  <div>
    <%= link_to "Back", stocks_path, class: 'btn btn-outline-primary btn-sm' %>
    <%= form.submit 'Save', class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>
