<%= form_with(model: customer) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-4 form-group">
    <div>
      <%= form.label :username, style: "display: block" %>
      <%= form.text_field :username, class: 'form-control' %>
    </div>
    <br>
    <div>
      <%= form.label :full_name, style: "display: block" %>
      <%= form.text_field :full_name, class: 'form-control' %>
    </div>
    <br>
    <div>
      <%= form.label :email, style: "display: block" %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <br>
    <div>
      <%= form.label :born_date, style: "display: block" %>
      <%= form.date_field :born_date, class: 'form-control' %>
    </div>
    <br>
    <div>
      <%= link_to "Back", customers_path, class: 'btn btn-outline-primary btn-sm' %>
      <%= form.submit 'Save', class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
<% end %>


